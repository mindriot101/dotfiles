[user]
    name = Simon Walker
    email = s.r.walker101@googlemail.com
[alias]
    st = status
    co = checkout
    su = submodule update --init --recursive
    gpr = pull --rebase --prune
    pullff = pull --ff-only
    pushff = push --ff-only
    mergeff = merge --ff-only
    sync = !git gpr && git push
    wdiff = diff --color-words
    ci = commit
    c = commit -m
    q = quick
    # Quickly diff the upstream remote (assume origin)
    diffup = diff origin
    upsub = submodule foreach 'git checkout master && git pull'

    # Quickly interactive rebase with upstream
    rebup = rebase -i origin/master --prune

    #Â Logging from Gary Bernhardt
    head = !git l -1
    h = !git head
    r = !git l -20
    ra = !git r --all
    l = log --graph --decorate --oneline
    la = log --graph --decorate --oneline --all
    dc = diff --cached
    aa = add --all
    aap = add --all --patch
    oneline = log --oneline --decorate
    today = log --since="6am"
    last = log -1
    unstage = reset HEAD
[color]
    ui = auto
[core]
    abbrev = 12
    pager = less -FXRSr
    autocrlf = false
    safecrlf = true
    whitespace = fix
    editor = emacs
    mergeoptions = --no-ff
    preloadindex = true
[merge]
    tool = diffconflicts
    conflictstyle = diff3
[push]
    default = simple
[mergetool "diffconflicts"]
    cmd = "diffconflicts vim $BASE $LOCAL $REMOTE $MERGED"
    trustExitCode = true
    keepBackup = false
[branch]
    autosetuprebase = always
[grep]
    extendedRegexp = true
[status]
    short = 1
    branch = 1
	submoduleSummary = true
[init]
    templatedir = ~/.gittemplate
[pull]
	rebase = preserve
