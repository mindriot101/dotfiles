    signingkey = B62EE752
[alias]
    st = status
    co = checkout
    su = submodule update --init --recursive
    pr = pull --rebase --prune
    pullff = pull --ff-only
    pushff = push --ff-only
    mergeff = merge --ff-only
    sync = !git gpr && git push
    wdiff = diff --color-words
    ci = commit -v
    c = commit -m
    q = quick
    edit = "!vim `git ls-files -m`"
    # Quickly diff the upstream remote (assume origin)
    diffup = diff origin
    upsub = submodule foreach 'git checkout master && git pull'

    # Quickly interactive rebase with upstream
    rebup = rebase -i origin/master --prune

    #Â Logging from Gary Bernhardt
    head = !git l -1
    h = !git head
    r = !git l -20
    ra = !git r --all
    l = log --graph --decorate --oneline
    la = log --graph --decorate --oneline --all
    dc = diff --cached
    aa = add --all
    aap = add --all --patch
    oneline = log --oneline --decorate
    today = log --since="6am"
    last = log -1
    unstage = reset HEAD
[color]
    ui = auto
[core]
    abbrev = 12
    autocrlf = false
    safecrlf = true
    whitespace = fix
    editor = vim
    mergeoptions = --no-ff
    preloadindex = true
[merge]
    tool = splice
[push]
    default = simple
    followTags = true
[diff]
    algorithm = histogram
    tool = opendiff
[difftool "opendiff"]
    path = opendiff
[mergetool "diffconflicts"]
    cmd = "diffconflicts vim $BASE $LOCAL $REMOTE $MERGED"
    trustExitCode = true
    keepBackup = false
[mergetool "splice"]
    cmd = "vim $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true
[fetch]
    # Always prune when fetching and pulling
    prune = 1
[branch]
    autosetuprebase = always
[grep]
    extendedRegexp = true
[status]
    short = 1
    branch = 1
	submoduleSummary = true
[init]
    templatedir = ~/.gittemplate
[pull]
	rebase = preserve
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
