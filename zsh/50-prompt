# colours
autoload -U colors
colors
setopt prompt_subst

# print smiley for last command status
local smiley="%(?,%{$fg[green]%}☺%{$reset_color%},%{$fg[red]%}☹%{$reset_color%})"

# Control promt
PROMPT='
%~
${smiley}  %{$reset_color%}'


# Get the git branch info 
RPROMPT='%{$fg[red]%}$(get_git_prompt_info)%{$reset_color%}'


