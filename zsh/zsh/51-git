if [[ $OSTYPE == "linux-gnu" || $OSTYPE == "linux" || $OSTYPE == "linux-gnueabi" ]]; then
    for FNAME in "${HOME}/build/share/git-core/contrib/completion/git-prompt.sh" "/etc/bash_completion.d/git" "/usr/share/git/completion/git-prompt.sh"; do
        if [ -f ${FNAME} ]; then
            . ${FNAME}
        fi
    done
fi

