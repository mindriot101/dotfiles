# colours
autoload -U colors
colors
setopt prompt_subst

# print smiley for last command status
local process_status="%(?,%{$fg[green]%}✔%{$reset_color%},%{$fg[red]%}✗ %?%{$reset_color%})"

## Control promt
local blue="%{$fg[blue]%}"
local green="%{$fg[green]%}"
local red="%{$fg[red]%}"
local lgrey="%{$fg[grey]%}"
local magenta="%{$fg[magenta]%}"
local reset="%{$reset_color%}"
PROMPT=' ${process_status} > '
RPROMPT='${red}$(__git_ps1)%{$reset_color%}'
