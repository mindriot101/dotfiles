case $OSTYPE in linux*)
    alias ls='ls -pF'
    alias open="xdg-open"
    alias heainit="source $HEADAS/headas-init.sh"

    # Set up the module command
    function module() { eval `modulecmd zsh $*`; }

    # Setup idl
    function setup_idl() {
        export IDL_PATH=${HOME}/idl:${IDL_PATH}
        module load idl
    }

    # Set up the queue commands on wasphead
    if [[ `dnsdomainname` == "star.le.ac.uk" ]]; then
        source /usr/local/sge/default/common/settings.sh
    fi
;; esac
