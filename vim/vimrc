" turn syntax highlighting on
if (&t_Co > 2 || has("gui_running")) && !exists("syntax_on")
    syntax on
endif

" Load all of the plugins with vundle
if filereadable(expand("~/.vim/setup/bundles.vim"))
source ~/.vim/setup/bundles.vim
endif

" set up some nice tab defaults
set tabstop=4
set softtabstop=4
set shiftwidth=4
set shiftround
set expandtab

" Set history settings
set history=10000
set undolevels=700

" reload all file changes automatically
set autoread

" set incremental search
set incsearch

" set case options for searching
set ignorecase
set smartcase

" show command as it's typed
set showcmd

" nice file formatting
set autoindent

" always have status line on
set laststatus=2
set encoding=utf-8 " Necessary to show unicode glyphs

" make backspace behave nicely
set backspace=indent,eol,start

" Set mouse mode
set mouse=a

" Set the tags file location
set tags=.git/tags;/

" Enable fast tty mode
set ttyfast

" Change the way tab autocompletion works
set wildmenu
set wildmode=list:longest,list:full

" Disable escape keys which makes vim more responsive
" set noesckeys

" Hide buffers instead of closing them
set hidden

" Don't update the display while executing macros
set lazyredraw

" Set up statusline
set statusline=

" Buffer number and pipe character with spaces
set statusline+=%-3.3n\ 

" Filename relative to opening path
set statusline+=%f\ 

" Status markers
set statusline+=%h%m%r%q

" End of left section, start right section
set statusline+=%=

" File type
set statusline+=%y\ 

" Cursor position
set statusline+=%-14.(%l,%c%V%)\ 

" View position
set statusline+=%P

" Folding method
set foldmethod=marker

" Thesaurus
set thesaurus+=~/thesaurus/mthesaur.txt

" Set colour scheme
set background=dark
colorscheme srw

" Enable british spelling
set spelllang=en_gb

" Better formatting
set formatprg=par

" Add some lines around the cursor
set scrolloff=3

" Configure 'Press enter to continue' messages
set shortmess=atI

" Decrease the leader key timeout for the comma key
set timeout timeoutlen=1000 ttimeoutlen=100

" GRB does these
set winwidth=79

" Enable scrolljump
set scrolljump=5

" Disable conceal
set conceallevel=0

" Enable relativenumber
set relativenumber

" Enable number also to get the current line numbered, only in 7.4 and above
if version >= 704
    set number
endif

" Open new split panes to right and bottom, which feels more natural
set splitbelow
set splitright

" Enable the ruler
set ruler

" Always show the tab line
set showtabline=2

" Set some ignore patterns
set wildignore+=*.aux,*.o,*.git,/tmp/*,*.so,*.swp,*.zip,venv,env,*.pyc

set switchbuf=useopen

set cursorline

" Jump back to last file position
au BufReadPost * 
    \ if line("'\"") > 1 && line("'\"") <= line("$") | 
    \ exe "normal! g`\"" | 
    \ endif

" Highlight trailing whitespace only in normal mode
highlight ExtraWhitespace ctermbg=red guibg=red
au InsertEnter * match ExtraWhitespace /\s\+\%#\@<!$/
au InsertLeave * match ExtraWhitespace /\s\+$/

""""""""""""""""""""
"     MAPPINGS     "
""""""""""""""""""""

" enable the semicolon to act like the colon key
" swap the keys to get the old semicolon functionality back
map ; :

" Remap the leader key to comma
let mapleader=','

" Quick spelling toggle
nmap <silent> <leader>s :set spell!<cr>

" Mapping for quick switching buffers
nnoremap <leader>b :ls<cr>:b<space>

" Mappings for saving in different modes
" from http://reefpoints.dockyard.com/2013/09/11/vim-staying-on-home-row-via-map.html
inoremap ;l <esc>
inoremap ;f <esc>:update<cr>a
nnoremap ;f :update<cr>

" Paste toggling - allow for pasting from other sources with correct
" formatting
set pastetoggle=<leader>p

" Multipurpose tab key from grb
function! InsertTabWrapper()
    let col = col('.') - 1
    if !col || getline('.')[col - 1] !~ '\k'
        return "\<tab>"
    else
        return "\<c-p>"
    endif
endfunction
inoremap <tab> <c-r>=InsertTabWrapper()<cr>
inoremap <s-tab> <c-n>

" Configure hlsearch
set hlsearch
nmap <space> :nohlsearch<cr>

" settings from thoughtbot dotfiles repo
" Swap between two files
map <leader><leader> <C-^>

" Speed up ctrl-e/ctrl-y
nnoremap <C-e> 3<C-e>
nnoremap <C-y> 3<C-y>

" Swap the mark keys
nnoremap ' `
nnoremap ` '

" Map control-s to update, rather than write
nmap <C-s> :update<CR>
imap <C-s> :update<CR>
vmap <C-s> :update<CR>

" Change directory to that of the current file
" Taken from Dave Aitken http://www.github.com/actionshrimp
" Tweaked to run lcd instead of cd
map <leader>cd :lcd %:p:h<CR>:pwd<CR>

" Remap the Q key
map Q gq

" Make the Y key work
map Y y$

" Reselect visual block after indent/outdent
vnoremap < <gv
vnoremap > >gv

" disable f1 key
inoremap <F1> <ESC>
nnoremap <F1> <ESC>
vnoremap <F1> <ESC>

" Remove the arrow key functionality
nnoremap <Up> :echo "no!"<cr>
nnoremap <Down> :echo "no!"<cr>
nnoremap <Left> :echo "no!"<cr>
nnoremap <Right> :echo "no!"<cr>
inoremap <Up> <esc>:echo "no!"<cr>
inoremap <Down> <esc>:echo "no!"<cr>
inoremap <Left> <esc>:echo "no!"<cr>
inoremap <Right> <esc>:echo "no!"<cr>

" Remap the move-window keys
map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l

""""""""""""""""""""
"     PLUGINS      "
""""""""""""""""""""

" Now load the plugins settings
let s:plugin_settings = expand($HOME . '/.vim/setup/plugin_settings.vim')
if filereadable(s:plugin_settings)
    :exec ':so ' . s:plugin_settings
endif
