    let g:python_host_prog = '/usr/local/bin/python'

    set shell=/usr/local/bin/zsh

    " Hack to allow <c-h> to work properly
    nmap <BS> <C-W>h

    " Pytest python runner
    let g:test#strategy = 'neovim'

 endif

