" turn off unneeded gui crap
set go=

" Use console popups
set go+=c

" if mac use the Hack font
if has("macunix")
    set gfn=Source\ Code\ Pro\ Medium:h14
else
    set gfn=Bitstream\ Vera\ Sans\ Mono\ 10
endif

" Disable cursor blinking in normal mode
set gcr=n:blinkon0

" Disable audible bell by enabling visual bell which is not implemented
set visualbell

" Set width
set columns=100

" Always set 256 color mode
set t_Co=256

" Finally change the colour scheme, as ir_black is not very nice in gui mode
set background=light
colorscheme solarized
