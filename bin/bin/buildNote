#!/bin/sh

set -eou pipefail

if ! command -v pandoc 2>&1 >/dev/null; then
    echo "buildNote: pandoc not found" >&2
    exit 1
fi

ext=html
filename=$1
target="$(dirname "${filename}")/../$ext"
mkdir -p ${target}
outputFile="$(basename "$filename" .md).$ext"

pandoc \
    -t html5 \
    --template Github.html5 \
    -o "$target/$outputFile" $filename &
