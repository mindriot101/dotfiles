#!/usr/bin/env python
# -*- coding: utf-8 -*-

import argparse
import subprocess as sp
import time
import threading

def show_canvas(field, obj_id):
    sp.check_call(['showcanvas', '-F', field, '-O', str(obj_id)])

def show_centroid(field, obj_id):
    sp.check_call(['showcentroid', '-F', field, '-O', str(obj_id)])


parser = argparse.ArgumentParser()
parser.add_argument('-F', '--field', required=True)
parser.add_argument('-O', '--obj-id', required=True, type=int)
args = parser.parse_args()

canvas_thread = threading.Thread(target=show_canvas, args=(args.field, args.obj_id))
canvas_thread.daemon = True
canvas_thread.start()

centroid_thread = threading.Thread(target=show_centroid, args=(args.field, args.obj_id))
centroid_thread.daemon = True
centroid_thread.start()

time.sleep(3)
