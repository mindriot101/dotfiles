#!/usr/bin/env bash

set -e

initialise_subdirs() {
    PROJECT_NAME="${1}"
    for SUBDIR in data output doc src src/${PROJECT_NAME} bin; do
        mkdir -p ${SUBDIR}
        (cd ${SUBDIR} && touch .gitkeep)
    done

    touch README.markdown
    touch src/${PROJECT_NAME}/__init__.py

    echo 'output/*' >> .gitignore
    echo '!output/.gitkeep' >> .gitignore
    echo 'data/*' >> .gitignore
    echo '!data/.gitkeep' >> .gitignore
}

create_git_project() {
    git init
    git add --all
    git commit -m 'Initial commit'
}

spawn_tmux_session() {
    tmux new -s `basename $(pwd)`
}

construct_setup_file() {
    PROJECT_NAME="${1}"
    cat > setup.py << EOF
from setuptools import setup
from glob import glob

setup(name='${PROJECT_NAME}',
        version='0.0.1',
        author='Simon Walker',
        author_email='s.r.walker101@googlemail.com',
        packages=['${PROJECT_NAME}', ],
        package_dir={'': 'src'},
        scripts=glob('bin/*.py'),
        long_description=open('README.markdown').read(),
        )
EOF
}

construct_project() {
    PROJECT_NAME="${1}"
    initialise_subdirs "${PROJECT_NAME}"
    construct_setup_file "${PROJECT_NAME}"
    create_git_project
    spawn_tmux_session
}

main() {
    if [[ $# -eq 0 ]]; then
        echo "Usage: `basename $0` <directory>"
        exit 1
    fi

    DIRNAME="$1"

    if [[ ! -d ${DIRNAME} ]]; then
        mkdir -p "${DIRNAME}"
    else
        echo "Directory ${DIRNAME} exists, exiting"
        exit 0
    fi

    (cd "${DIRNAME}" && construct_project "${DIRNAME}")
}

main $*
