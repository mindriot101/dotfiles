# Set the keyboard map to UK layout
setxkbmap gb

# Start the ssh-agent
# eval $(ssh-agent)

# Handle nice suspend
xss-lock -- i3lock --color 333333 --show-failed-attempts &

# Set the screen configuration
xrandr --output DP-2 --primary --right-of DVI-D-0

# Start the notification handler
/usr/bin/dunst &

# Set the keyboard map
xmodmap ~/.Xmodmap

# Start i3
exec i3
